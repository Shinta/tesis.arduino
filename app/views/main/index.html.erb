<div class="well well-large span6 login_well offset3">
	<fieldset>
    <legend>Inmuebles Inteligentes</legend>
		<%= bootstrap_flash %>
		<%= form_tag login_path, :class => "form-horizontal" do -%>
		<div class="control-group">
	    <%= label_tag :username, "Usuario", :class => "control-label" %>
	    <div class="controls">
	      <%= text_field_tag :username, params[:username], :class => "span9" %>
	    </div>
	  </div>
	  <div class="control-group">
	    <%= label_tag :password, "Contraseña", :class => "control-label" %>
	    <div class="controls">
	      <%= password_field_tag :password, "", :class => "span9"  %>
	    </div>
	  </div>
	  <div class="control-group">
	    <div class="controls">
	      <button type="submit" class="btn btn-primary btn-large">Iniciar Sesión</button>
	    </div>
	  </div>
		<% end -%>
	</fieldset>
</div>
