<h2>Crear nuevo usuario</h2>
<%= display_base_errors(@user) %>
<%= form_for @user do |form| %>
<%= form.label :name, "Nombre" %>
<%= form.text_field :name %>
<%= form.label :lastname, "Apellido" %>
<%= form.text_field :lastname %>
<%= form.label :username, "Nombre de Usuario" %>
<%= form.text_field :username %>
<%= form.label :password, "ContraseÃ±a" %>
<%= form.password_field :password %>
<%= form.label :profile_id, "Perfil" %>
<%= form.select :profile_id, options_from_collection_for_select(Profile.all, :id, :name) %>
<%= form.label :cellphone, "Celular" %>
<div class="input-prepend">
	<span class="add-on">+595</span>
	<%= form.text_field :cellphone, :class => "input-medium" %>
</div>
<span class="help-block">Ejemplo: +5959XXXXXXXX</span>
<%= form.label(:send_notification, :class => "checkbox") do %>
	<%= form.check_box :send_notification %> Enviar notificaciones?
<% end %>
<p class="buttons"><button type="submit" class="btn btn-primary btn-large">Crear</button></p>
<% end %>